{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["python"],
      "phases": {
        "install": {
          "commands": [
            "pip install -r requirements.txt"
          ]
        },
        "start": {
          "cmd": "gunicorn main:app --bind 0.0.0.0:$PORT"
        }
      }
    }
  },
  "service": {
    "name": "indotex-license-server",
    "type": "web",
    "port": 8080
  }
}
